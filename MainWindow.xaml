<Window x:Class="practica5.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:practica5"
        mc:Ignorable="d"
        Title="Пример 3" Height="360" Width="300" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="120"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="70"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="30"/>
        </Grid.RowDefinitions>
        <Label Content="A" HorizontalAlignment="Right"/>
        <TextBox x:Name="txta" Grid.Column="1" Margin="7"/>
        <Label Content="B" HorizontalAlignment="Right" Grid.Row="1"/>
        <TextBox x:Name="txtb" Grid.Column="1" Grid.Row="1" Margin="7"/>
       
        <Label Content="Ответ" Grid.Row="2" HorizontalAlignment="Right"/>
        <TextBox x:Name="otvet" Grid.Column="1" Grid.Row="2" Margin="12"/>
        <Button x:Name="knopka" Grid.Column="1" Grid.Row="4" Content="OK" Margin="12" Click="knopka_Click"/>
    </Grid>
</Window>
